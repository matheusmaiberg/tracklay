    "@eslint/js": "^9.39.2",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.57.1",
    "globals": "^17.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.60.0"
  },
  "files": [
    "worker.js",
    "src/",
    "wrangler.toml",
    "scripts/",
