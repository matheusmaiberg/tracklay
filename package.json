{
  "name": "tracklay-tracking",
  "version": "1.0.0",
  "description": "First-party tracking proxy for Shopify stores. Bypass Safari ITP, iOS tracking restrictions, ad-blockers, and Firefox ETP. Recover 40% lost conversion data. Serve Google Analytics, GTM, Meta Pixel from your domain. 90%+ ad-blocker bypass with UUID obfuscation. Cloudflare Workers serverless proxy for accurate ROAS tracking and conversion attribution.",
  "type": "module",
  "main": "worker.js",
  "scripts": {
    "validate": "node scripts/validate-config.js",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy ",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "format": "prettier --write .",
    "lint": "eslint .",
    "login": "wrangler login",
    "whoami": "wrangler whoami",
    "tail": "wrangler tail",
    "secret:put": "wrangler secret put",
    "secret:list": "wrangler secret list",
    "typegen": "wrangler types",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheusmaiberg/tracklay.git"
  },
  "keywords": [
    "shopify",
    "shopify-tracking",
    "safari-itp",
    "ios-tracking",
    "itp-bypass",
    "ad-blocker-bypass",
    "first-party-tracking",
    "conversion-tracking",
    "cloudflare-workers",
    "google-analytics",
    "google-tag-manager",
    "gtm",
    "ga4",
    "meta-pixel",
    "facebook-pixel",
    "tracking-proxy",
    "etp",
    "firefox-tracking-protection",
    "anti-tracking",
    "privacy-sandbox",
    "server-side-tagging",
    "roas-tracking",
    "attribution",
    "e-commerce",
    "conversion-optimization",
    "analytics-proxy",
    "uuid-obfuscation",
    "edge-computing",
    "serverless"
  ],
  "author": {
    "name": "Matheus",
    "email": "matheus@tracklay.shop",
    "url": "https://github.com/matheusmaiberg"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matheusmaiberg/tracklay/issues"
  },
  "homepage": "https://tracklay.app",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260131.0",
