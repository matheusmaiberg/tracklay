# TRACKLAY - Wrangler Configuration Template
# Copy to wrangler.toml and configure
# ALL environment variables go in .env file (not here!)

name = "tracklay"
main = "worker.js"
compatibility_date = "2026-01-26"
compatibility_flags = ["nodejs_compat"]

# Cloudflare Account ID (get from: wrangler whoami)
# account_id = "your-account-id-here"

# Routes - configure your custom domain
# [[routes]]
# pattern = "cdn.yourstore.com/*"
# zone_name = "yourstore.com"

# Cron triggers
[triggers]
crons = ["0 */12 * * *"]

# Smart placement
[placement]
mode = "smart"

# Build
[build]
command = ""

# Observability (optional)
[observability]
[observability.logs]
enabled = true
head_sampling_rate = 0.2
invocation_logs = true

[observability.traces]
enabled = true
head_sampling_rate = 0.05

# IMPORTANT: Environment variables are configured in .env file
# Copy .env.example to .env and fill your values there
